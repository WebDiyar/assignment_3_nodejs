<!-- views/editUser.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <title>Edit User</title>
</head>

<body>
    <div class="mt-5" style="padding-left: 33%; padding-right: 33%">
        <div class="card w-100">
            <div class="card-header bg-primary text-light">
                <h1>Edit User</h1>
            </div>
            <form class="card-body" method="POST" action="/admin/edit/<%= user._id %>">
                <div class="mb-3">
                    <label for="username" class="form-label">User name</label>
                    <input type="text" name="username" value="<%= user.username %>" required class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" name="password" required class="form-control" />
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" name="isAdmin" class="form-check-input" <%=user.isAdmin ? 'checked' : '' %>
                    <label for="isAdmin" class="form-check-label">Is Admin</label>
                </div>
                <button class="btn btn-primary" type="submit">Save Changes</button>
            </form>
        </div>
    </div>
</body>

</html>