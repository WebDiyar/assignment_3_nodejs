<!DOCTYPE html>
<html>

<head>
    <title>Mock API Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .nav-item:hover,
        .nav-item:active {
            color: white;
        }

        .btn-navitem {
         width: 100%;
         border-radius: 20px;
         padding: 10px 25px;
         background-color: #007bff;
         color: white;
         border: none;
       }

       #navbar-nav{
        display: flex;
        gap: 30px;
    }

    #nav{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    </style>
</head>

<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between align-items-center "
            id="nav">
            <div class="navBar container d-flex justify-content-between align-items-center" id="navBaring" id="nav-div">
                <div><a class="navbar-brand" href="/user">Assignment3</a></div>
        
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
        
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav" id="navbar-nav" style="display: flex; ">
                        <li class="nav-item">
                            <form method="GET" action="/weather">
                                <button type="submit" class="btn-navitem">Weather</button>
                            </form>
                        </li>
        
                        <li>
                            <form method="GET" action="/currency">
                                <button type="submit" class="btn-navitem">Currency</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form method="GET" action="/mockapi">
                                <button type="submit" class="btn-navitem">MockApi</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <form method="GET" action="/history">
                                <button type="submit" class="btn-navitem">History</button>
                            </form>
                        </li>
                    </ul>
        
                    <form class="form-inline my-2 my-lg-0" style="margin-left: 35%;">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" formaction="/">Log Out</button>
                    </form>
        
                </div>
            </div>
        </nav>

    <div class="m-3" style="margin-top: 200px;">
        <div class="p-3">
            <h1>Mock API Data</h1>
        </div>

        <% if (error) { %>
            <p class="text-danger mt-2">
                <%= error %>
            </p>
            <% } else if (data) { %>
                <!-- Render data from the mock API -->
                <table class="table table-striped table-hover table-bordered border-dark">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.password %>
                                </td>
                                <td>
                                    <%= user.role %>
                                </td>
                                <!-- Add more information as needed -->
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } %>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.7.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>