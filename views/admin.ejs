<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
    <div class="m-3">
        <div style="margin-left: 45%;" class="p-3 w-100">
            <h1>Admin</h1>
        </div>
        <table style="margin-left: 25%;" class="table table-striped table-hover  w-50">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="w-75">Users</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td class="">
                            <%= user.username %>
                        </td>
                        <td>
                            <form method="GET" action="/admin/edit/<%= user._id %>">
                                <button class="btn btn-success" type="submit">Update</button>
                            </form>
                            </form>
                        </td>
                        <td>
                            <form method="GET" action="/admin/delete/<%= user._id %>">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
</body>

</html>